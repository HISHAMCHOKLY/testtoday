<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;1,100;1,200;1,400;1,500&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/style.css">
    <title>SET PRICE</title>

</head>
<body >
    <%-include('../partials/navbar.ejs')%>
    <form action="/employee/<%=data.emp_type%>/<%=data.emp_id%>/set_amount" method="post">
        <div class="row">
            <div class="col-2">
                <%-include('../partials/sidebar_employee.ejs')%>
            </div>
                <div class="col-10" >
                    <div class="row mt-2">
                
                        <div class="col-9 mt-4 offset-1">
                            <%data.thop_types.forEach((x)=>{%>
                            <div class="row mt-1 ">
                                <div class="col-4 offset-2">
                                    <p class="mb-1 h5"><%=x.name%></p>
                                </div>
                                <div class="col-1">
                                    <p class="mb-1 h5">:</p>
                                </div>
                                <div class="col-5">
                                    <input class="mb-1 h5" value="<%=x.price%>" name="<%=x.t_name%>"></p>
                                </div>
                            </div>
                            <%})%>
                            
                            <div class="row mt-4">
                                <div class="col-3 offset-5">
                                    <button class="btn btn-success btn-block">Submit</button>
                                </div>

                            </div>
                        </div>
                    </div>
                    
            </div>
        </div>
    </form>    

    <%-include('../partials/salary_pay_modal.ejs')%>

</body>
</html>